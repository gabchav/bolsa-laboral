<div class="container">
  <div class="row">
      <div class="col-12">
<br>
  <h2>Registro de Persona</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
  <div class="field">
    <%= f.label :rut %><br />
    <%= f.text_field :rut, autofocus: true, autocomplete: "rut" %>
  </div>

  <div class="field">
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre, autofocus: true, autocomplete: "Nombre" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "Email" %>
  </div>

  <div class="field">
    <%= f.label :'Fecha de Nacimiento' %><br />
    <%= f.datetime_select :fnac, autofocus: true, autocomplete: "Fecha de Nacimiento" %>
  </div>

  <div class="field">
    <%= f.label :telefono %><br />
    <%= f.text_field :telefono, autofocus: true, autocomplete: "TelÃ©fono" %>
  </div>

  <div class="field">
    <%= f.label :genero %>
    <%= collection_select(:personas, :genero_id, Genero.all, :id, :nombre, prompt: true) %>
  </div>

  <div class="field">
    <%= f.label :curriculum %><br />
    <%= f.text_field :curriculum, autofocus: true, autocomplete: "Cargar CV" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-outline-dark" %>
  </div>
<% end %>

        </div>
    </div>
</div>

<%= render "devise/shared/links" %>
